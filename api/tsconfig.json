{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.json"] 
}